<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pal.View.NewGroup">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="round_done_white_36dp.png"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Enter chat room title." Text="{Binding RoomTitle}"/>

            <ListView Header="Invited friends" ItemsSource="{Binding InvitedFriends}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding UserName}" Detail="{Binding Email}" ImageSource="blank_profile_picture_640.png"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>